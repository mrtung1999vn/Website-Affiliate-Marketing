<%- include('../partials/header') %>

<style>
  .login-bg-tech {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }
  .login-container {
    width: 100%;
    max-width: 370px;
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.13);
    padding: 36px 28px 28px 28px;
    box-sizing: border-box;
    border: 2.5px solid #e0e7ef;
    position: relative;
    z-index: 2;
  }
  .login-title {
    text-align: center;
    color: #2d3a4b;
    font-size: 1.5em;
    margin-bottom: 28px;
    font-weight: 700;
    letter-spacing: 1px;
  }
  .login-tech-img {
    display: flex;
    justify-content: center;
    margin-bottom: 18px;
  }
  .login-tech-img img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    filter: drop-shadow(0 2px 8px #00c6ff33);
    border-radius: 50%;
    background: #f0f7ff;
    padding: 8px;
  }
  .login-form input[type="text"],
  .login-form input[type="password"] {
    width: 100%;
    padding: 12px 14px;
    margin-bottom: 20px;
    border: 1.5px solid #e0e0e0;
    border-radius: 8px;
    font-size: 1em;
    background: #fafbfc;
    transition: border 0.2s, box-shadow 0.2s;
    box-sizing: border-box;
  }
  .login-form input:focus {
    border: 1.5px solid #007bff;
    outline: none;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,123,255,0.08);
  }
  .login-form button[type="submit"] {
    width: 100%;
    padding: 13px;
    background: linear-gradient(90deg, #007bff 60%, #00c6ff 100%);
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 1.1em;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.2s, box-shadow 0.2s;
    margin-top: 8px;
    box-shadow: 0 2px 8px rgba(0,123,255,0.07);
  }
  .login-form button[type="submit"]:hover {
    background: linear-gradient(90deg, #0056b3 60%, #009ec3 100%);
  }
  .login-footer {
    text-align: center;
    color: #888;
    font-size: 0.98em;
    margin-top: 32px;
    margin-bottom: 8px;
    position: absolute;
    left: 0; right: 0; bottom: 0;
    z-index: 3;
  }
  @media (max-width: 480px) {
    body {
      align-items: flex-start;
    }
    .login-container {
      margin: 24px 4px;
      padding: 20px 8px 16px 8px;
      border-radius: 10px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }
    .login-title {
      font-size: 1.2em;
    }
    .login-form input,
    .login-form button[type="submit"] {
      font-size: 1em;
      padding: 10px 8px;
    }
  }
</style>

<div class="login-bg-tech">
  <div class="login-container">
    <div class="login-tech-img">
      <% if (shop && shop.logo) { %>
        <img src="/uploads/<%= shop.logo %>" alt="Logo shop" />
      <% } else { %>
        <img src="/images/logo.png" alt="Shop Tech" />
      <% } %>
    </div>
    <div class="login-title">Đăng nhập Shop</div>
    <form class="login-form" method="POST" action="/shop/<%= slug %>/login">
      <input type="text" name="username" placeholder="Tên đăng nhập" required />
      <input type="password" name="password" placeholder="Mật khẩu" required />
      <% if (typeof error !== 'undefined' && error) { %>
        <div style="color: #e74c3c; text-align:center; margin-bottom:10px; font-size:1em; font-weight:500;">
          <%= error %>
        </div>
      <% } else if (typeof success !== 'undefined' && success) { %>
        <div style="color: #27ae60; text-align:center; margin-bottom:10px; font-size:1em; font-weight:500;">
          <%= success %>
        </div>
      <% } %>
      <button type="submit">Đăng nhập</button>
    </form>
  </div>
  <div class="login-footer">
    © 2025 Affiliate Marketing System - All rights reserved.
  </div>
</div>

<%- include('../partials/footer') %>
