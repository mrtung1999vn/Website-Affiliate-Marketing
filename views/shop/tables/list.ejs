<div style="max-width:600px;margin:0 auto;">
  <h2 style="margin-bottom:18px;">Danh sách Table</h2>
  <div style="text-align:right;margin-bottom:16px;">
    <a href="/shop/<%= slug %>/tables/create" style="padding:8px 16px;background:#007bff;color:#fff;border-radius:7px;text-decoration:none;font-weight:500;">+ Thêm Table</a>
  </div>
  <table style="width:100%;border-collapse:collapse;">
    <thead>
      <tr style="background:#f5f5f5;">
        <th style="padding:8px 6px;border:1px solid #e0e0e0;">#</th>
        <th style="padding:8px 6px;border:1px solid #e0e0e0;">Tên Table</th>
        <th style="padding:8px 6px;border:1px solid #e0e0e0;">Mô tả</th>
        <th style="padding:8px 6px;border:1px solid #e0e0e0;">Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% if (tables.length === 0) { %>
        <tr>
          <td colspan="4" style="text-align:center;padding:16px;">Chưa có Table nào.</td>
        </tr>
      <% } %>
      <% tables.forEach(function(table, idx) { %>
        <tr>
          <td style="padding:8px 6px;border:1px solid #e0e0e0;"><%= idx+1 %></td>
          <td style="padding:8px 6px;border:1px solid #e0e0e0;"><%= table.name %></td>
          <td style="padding:8px 6px;border:1px solid #e0e0e0;"><%= table.description %></td>
          <td style="padding:8px 6px;border:1px solid #e0e0e0;">
            <a href="/shop/<%= slug %>/tables/<%= table.id %>/edit" style="color:#007bff;margin-right:10px;">Sửa</a>
            <form action="/shop/<%= slug %>/tables/<%= table.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Xác nhận xóa Table này?');">
              <button type="submit" style="background:#dc3545;color:#fff;border:none;padding:5px 12px;border-radius:5px;cursor:pointer;">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>