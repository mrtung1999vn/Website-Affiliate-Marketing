</div>

<!-- Modal backdrop -->
<div id="modal-backdrop" class="modal-backdrop"></div>

<!-- Add Category Modal -->
<div id="add-modal" class="modal">
  <div class="modal-header">Th√™m danh m·ª•c</div>
  <form id="add-form" action="/shop/<%= slug %>/categories/create" method="POST">
    <label for="add-name">T√™n danh m·ª•c</label>
    <input id="add-name" name="name" placeholder="T√™n danh m·ª•c" required>
    <label for="add-description">M√¥ t·∫£</label>
    <textarea id="add-description" name="description" placeholder="M√¥ t·∫£"></textarea>
    <div class="modal-actions">
      <button type="button" onclick="closeModal()">H·ªßy</button>
      <button type="submit" class="action-btn add">Th√™m</button>
