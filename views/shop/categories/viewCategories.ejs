<!-- Edit Category Modal -->
<div id="edit-modal" class="modal">
  <div class="modal-header">S·ª≠a danh m·ª•c</div>
  <form id="edit-form" method="POST">
    <label for="edit-name">T√™n danh m·ª•c</label>
    <input id="edit-name" name="name" placeholder="T√™n danh m·ª•c" required>
    <label for="edit-description">M√¥ t·∫£</label>
    <textarea id="edit-description" name="description" placeholder="M√¥ t·∫£"></textarea>
    <div class="modal-actions">
      <button type="button" onclick="closeModal()">H·ªßy</button>
