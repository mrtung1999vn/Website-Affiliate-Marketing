<%- include('../partials/header') %>

<style>
  body {
      padding-top: 54px;
      min-height: 100vh;
      background: linear-gradient(135deg, #1a2980 0%, #26d0ce 100%);
      background-attachment: fixed;
      position: relative;
      overflow-x: hidden;
    }
    body::before {
      content: '';
      position: fixed;
      top: 0; left: 0; width: 100vw; height: 100vh;
      background: repeating-linear-gradient(135deg, rgba(0,123,255,0.08) 0 2px, transparent 2px 40px), repeating-linear-gradient(45deg, rgba(38,208,206,0.06) 0 2px, transparent 2px 40px);
      pointer-events: none;
      z-index: 0;
      opacity: 0.7;
      mix-blend-mode: lighten;
    }
  .login-container {
    max-width: 400px;
    margin: 60px auto 0 auto;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.10);
    padding: 36px 28px 28px 28px;
    box-sizing: border-box;
  }
  .login-title {
    text-align: center;
    color: #2d3a4b;
    font-size: 1.7em;
    margin-bottom: 28px;
    font-weight: 700;
    letter-spacing: 1px;
  }
  .login-form input[type="text"],
  .login-form input[type="password"] {
    width: 100%;
    padding: 12px 14px;
    margin-bottom: 20px;
    border: 1.5px solid #e0e0e0;
    border-radius: 8px;
    font-size: 1em;
    background: #fafbfc;
    transition: border 0.2s, box-shadow 0.2s;
    box-sizing: border-box;
  }
  .login-form input:focus {
    border: 1.5px solid #007bff;
    outline: none;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,123,255,0.08);
  }
  .login-form button[type="submit"] {
    width: 100%;
    padding: 13px;
    background: linear-gradient(90deg, #007bff 60%, #00c6ff 100%);
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 1.1em;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.2s, box-shadow 0.2s;
    margin-top: 8px;
    box-shadow: 0 2px 8px rgba(0,123,255,0.07);
  }
  .login-form button[type="submit"]:hover {
    background: linear-gradient(90deg, #0056b3 60%, #009ec3 100%);
  }

  @media (max-width: 600px) {
      .login-container {
        margin: 24px 4px;
        padding: 20px 8px 16px 8px;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      }
      .login-title {
        font-size: 1.2em;
      }
      .login-form input,
      .login-form button[type="submit"] {
        font-size: 1em;
        padding: 10px 8px;
      }
    }
</style>

<div class="login-container">
  <div class="login-title">Admin Login</div>
  <form class="login-form" method="POST" action="/admin/login">
    <input type="text" name="username" placeholder="Admin Username" required />
    <input type="password" name="password" placeholder="Password" required />
    <button type="submit">Đăng nhập</button>
  </form>
</div>

<%- include('../partials/footer') %>
